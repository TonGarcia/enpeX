<h1>Listing description_items</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Long description</th>
      <th>Project</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @description_items.each do |description_item| %>
      <tr>
        <td><%= description_item.title %></td>
        <td><%= description_item.long_description %></td>
        <td><%= description_item.project %></td>
        <td><%= link_to 'Show', description_item %></td>
        <td><%= link_to 'Edit', edit_description_item_path(description_item) %></td>
        <td><%= link_to 'Destroy', description_item, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Description item', new_description_item_path %>
