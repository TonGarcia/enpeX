<h1>Listing projects</h1>

<table>
  <thead>
    <tr>
      <th>ID</th>
      <th>Name</th>
      <th>Url video</th>
      <th>Owner</th>
      <th>Segmentação</th>
      <th>Amount Invested</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @projects.each do |project| %>
      <tr>
        <td><%= project.id %></td>
        <td><%= project.name %></td>
        <td><%= project.url_video %></td>
        <td><%= project.owner.name %></td>
        <td class="thumbnail_<%= project.project_type.name %>"><center><%= project.project_type.name %></center></td>
        <td><center>R$ <%= project.discounted_amount_invested %></center></td>
        <td><%= link_to 'Show', project %></td>
        <td><%= link_to 'Edit', edit_project_path(project) %></td>
        <td><%= link_to 'Destroy', project, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

