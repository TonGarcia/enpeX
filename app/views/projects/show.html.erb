<p id="notice"><%= notice %></p>

<p>
  <strong>Nome:</strong>
  <%= @project.name %>
</p>

<p>
  <strong>Segmento:</strong>
  <%= t(:project_type)[@project.project_type.name.to_sym] %>
</p>

<p>
  <strong>Resumo:</strong>
  <%= @project.resume %>
</p>

<p>
  <strong>URL video:</strong>
  <%= @project.url_video %>
</p>

<p>
  <strong>Criador:</strong>
  <%= @project.owner.name %>
</p>

<ul>
  <%
      @project.transactions.each do |transaction|
  %>
        <li> <strong>Investor:</strong> <%= transaction.user.name %> - <strong> Invested: </strong> R$ <%= transaction.value %> </li>
  <%
      end
  %>
</ul>

<div style="color:#Df4442;">
  <strong>TOTAL RECEIVED: </strong> R$<%= @project.discounted_amount_invested %> <br/>
</div>

<%= link_to 'Edit', edit_project_path(@project) %> |
<%= link_to 'Back', projects_path %>
